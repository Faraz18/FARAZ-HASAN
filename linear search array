#include <stdio.h>

int main()
{
    int arr[30],n,i,a;
    
    printf("enter the number of elements");
    scanf("%d", &n);
    
    printf("enter the values");
    for(i=0; i<n; i++)
    {
        scanf("%d", &arr[i]);
    }
    
    printf("enter the value to be searched \n");
    scanf("%d", &a);
    
    for(i=0; i<n; i++)
    {
        if(arr[i]== a)
        {
            break;
        }
    }
    
    if(i<n)
    
    printf("position of element is:%d \n",i+1);
    
    else
    
    printf("not present");
    
    return 0;
}
    
